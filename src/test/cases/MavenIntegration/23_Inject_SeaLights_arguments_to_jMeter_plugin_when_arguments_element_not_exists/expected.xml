<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.demo</groupId>
    <artifactId>io.demo.junit-integration</artifactId>
    <version>0.0.1-SNAPSHOT</version>

    <dependencies>
        <dependency>
            <groupId>io.sealights.on-premise.agents</groupId>
            <artifactId>java-agent-api</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.lazerycode.jmeter</groupId>
                <artifactId>jmeter-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jmeter-tests</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>jmeter</goal>
                        </goals>
                        <configuration>
                            <jMeterProcessJVMSettings>
                                <arguments>
                                    <argument>-Dsl.enableUpgrade=false</argument>
                                    <argument>-Dsl.customerId=fake-customer-id-123</argument>
                                    <argument>-Dsl.server=http://fake-server-url.com</argument>
                                    <argument>-Dsl.appName=fake-app-name</argument>
                                    <argument>-Dsl.moduleName=fake-module-name</argument>
                                    <argument>-Dsl.buildName=1</argument>
                                    <argument>-Dsl.branchName=fake-branch</argument>
                                    <argument>-Dsl.includes=com.fake.*</argument>
                                    <argument>-Dsl.excludes=*FastClassByGuice*, *ByCGLIB*, *EnhancerByMockitoWithCGLIB*, *EnhancerBySpringCGLIB*, com.fake.excluded.*</argument>
                                    <argument>-Dsl.classLoadersExcluded=org.powermock.core.classloader.MockClassLoader</argument>
                                    <argument>-Dsl.pathToMetaJson=/path/to/override-mata.json</argument>
                                    <argument>-javaagent:/path/to/override-sl-test-listener.jar</argument>
                                </arguments>
                            </jMeterProcessJVMSettings>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19</version>
            </plugin>
            <plugin>
                <groupId>io.sealights.on-premise.agents.plugin</groupId>
                <artifactId>sealights-maven-plugin</artifactId>
                <version>1.1.1</version>
                <configuration>
                    <customerid>fake-customer-id-123</customerid>
                    <server>http://fake-server-url.com</server>
                    <createBuildSessionId>false</createBuildSessionId>
                    <appName>fake-app-name</appName>
                    <moduleName>fake-module-name</moduleName>
                    <workspacepath>c:\fake-worakpsacepath</workspacepath>
                    <build>1</build>
                    <branch>fake-branch</branch>
                    <packagesincluded>com.fake.*</packagesincluded>
                    <packagesexcluded>*FastClassByGuice*, *ByCGLIB*, *EnhancerByMockitoWithCGLIB*, *EnhancerBySpringCGLIB*, com.fake.excluded.*</packagesexcluded>
                    <filesincluded>*.class</filesincluded>
                    <buildScannerJar>c:\fake-build-scanner.jar</buildScannerJar>
                    <testListenerJar>c:\fake-test-listener.jar</testListenerJar>
                    <overrideMetaJsonPath>/path/to/override-mata.json</overrideMetaJsonPath>
                    <overrideTestListenerPath>/path/to/override-sl-test-listener.jar</overrideTestListenerPath>
                    <logLevel>INFO</logLevel>
                    <logFolder>c:\fake-log-folder</logFolder>
                    <metadata>
                        <build>someBuildInfo</build>
                        <plugin>somPluginInfo</plugin>
                    </metadata>
                    <sealightsJvmParams>
                        <param>value</param>
                    </sealightsJvmParams>
                    <buildScannerParams>
                        <param>value</param>
                    </buildScannerParams>
                </configuration>
                <executions>
                    <execution>
                        <id>a1</id>
                        <goals>
                            <goal>build-scanner</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>a2</id>
                        <goals>
                            <goal>test-listener</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
